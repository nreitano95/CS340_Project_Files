{% extends "main.j2" %}

<title>{% block title %}Update Employee{% endblock %}</title>

  <header>
    {% block header %}<h1>Update Employee</h1>{% endblock %}
  </header>

  {% block body %}
  
  <form method="POST">
  <div class="row">
    <div class="six columns">
      <label for="firstNameInput">First Name</label>
      <input class="u-full-width" type="text" id="first_name" name="first_name" value="{{ request.form['first_name'] or employee['first_name'] }}" required>
    </div>
    <div class="six columns">
      <label for="lastNameInput">Last Name</label>
      <input class="u-full-width" type="text" id="last_name" name="last_name" value="{{ request.form['last_name'] or employee['last_name'] }}" required>
    </div>
  </div>
  <div class="row">
    <div class="six columns">
      <label for="titleInput">Title</label>
      <input class="u-full-width" type="text" id="title" name="title" value="{{ request.form['title'] or employee['title'] }}" required>
    </div>
  </div>

  <div class="row">
    <div class="six columns">
      <label for="dateOfHireInput">Date of Hire</label>
      <input class="u-full-width" type="date" id="date_of_hire" name="date_of_hire" value="{{ request.form['date_of_hire'] or employee['date_of_hire'] }}" required>
    </div>
    <div class="six columns">
      <label for="dateOfTerminationInput">Date of Termination</label>
      <input class="u-full-width" type="date" id="date_of_termination" name="date_of_termination" value="{{ request.form['date_of_termination'] or employee['date_of_termination'] }}">
    </div>
  </div>
  
  <div class="row">
    <div class="six columns">
      <label for="phoneInput">Phone</label>
      <input class="u-full-width" type="tel" id="phone" name="phone" value="{{ request.form['phone'] or employee['phone'] }}" required>
    </div>
    <div class="six columns">
      <label for="emailInput">Email</label>
      <input class="u-full-width" type="email" id="email" name="email" value="{{ request.form['email'] or employee['email'] }}" required>
    </div>
  </div>

  <input class="button-primary" type="submit" value="Submit">
  <a class="button" href="{{ url_for('Employees') }}">Cancel</a>
</form>

{# Delete Button #}
<form action="{{ url_for('deleteEmployee', id=employee['employee_id']) }}" method="POST">
  <input class="button" type="submit" value="Delete Employee">
</form>

  {% endblock %}
