{% extends "main.j2" %}

<title>{% block title %}Update Employee{% endblock %}</title>

  <header>
    {% block header %}<h1>Update Employee</h1>{% endblock %}
  </header>

  {% block body %}
  
<form>
  <div class="row">
    <div class="six columns">
      <label for="firstNameInput">First Name</label>
      <input class="u-full-width" type="text" id="firstNameInput">
    </div>
    <div class="six columns">
      <label for="lastNameInput">Last Name</label>
      <input class="u-full-width" type="text" id="lastNameInput">
    </div>
  </div>
  <div class="row">
    <div class="six columns">
      <label for="titleInput">Title</label>
      <input class="u-full-width" type="text" id="titleInput">
    </div>
  </div>

  <div class="row">
    <div class="six columns">
      <label for="dateOfHireInput">Date of Hire</label>
      <input class="u-full-width" type="date" id="dateOfHireInput">
    </div>
    <div class="six columns">
      <label for="dateOfTerminationInput">Date of Termination</label>
      <input class="u-full-width" type="date" id="dateOfTerminationInput">
    </div>
  </div>
  
  <div class="row">
    <div class="six columns">
      <label for="phoneInput">Phone</label>
      <input class="u-full-width" type="tel" id="phoneInput">
    </div>
    <div class="six columns">
      <label for="emailInput">Email</label>
      <input class="u-full-width" type="email" id="emailInput">
    </div>
  </div>

