{% extends "main.j2" %}

<title>{% block title %}Vehicles{% endblock %}</title>

  <header>
    {% block header %}
    <h1>Vehicles</h1>
    {% endblock %}
  </header>

  {% block body %}

  <h3>Subpages</h3>
  <ul>
    <li><a href="{{ url_for('createVehicle') }}">Add New Vehicle</a>
  </ul>
  
  <h3>Vehicle Search</h3>
    <form>
      <input type="text" placeholder="Search...">
      <input type="submit" value="Submit">
    </form>


  <table class="u-full-width">
  <thead>
    <tr>
      <th>VIN</th>
      <th>Vehicle Type</th>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Color</th>
      <th>Is Pre-Owned?</th>
      <th>Is For Sale?</th>
      <th>MSRP</th>
      <th>Update</th>      
      
    </tr>
  </thead>
  <tbody>
  {% for vehicle in Vehicles %}
    <tr>
      <td>{{ vehicle['vin'] }}</td>
      <td>{{ vehicle['vehicle_type'] }}</td>
      <td>{{ vehicle['make'] }}</td>
      <td>{{ vehicle['model'] }}</td>
      <td>{{ vehicle['year'] }}</td>
      <td>{{ vehicle['color'] }}</td>
      <td>{{ vehicle['is_preowned'] }}</td>
      <td>{{ vehicle['is_for_sale'] }}</td>
      <td>{{ vehicle['msrp'] }}</td>
      <td><a class="action" href="{{ url_for('updateVehicle', id=vehicle['vin']) }}">Edit</a></td>
    </tr>
  {% endfor %}
  </tbody>
</table>

  {% endblock %}
