      <label for="employeeInput">Employee_Customer_ID</label>
      <select name="employeeInput" id="employeeInput">
        <option value="" disabled selected hidden>Select Employee_Customer_ID</option>
        <option value="option1">Dynamically Populated ID 1</option>
